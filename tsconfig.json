{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": ".",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": false,
    "noUnusedLocals": true
  },
  "ts-node": {
    "transpileOnly": true,
    "require": ["dotenv/config"]
  },
  "exclude": ["node_modules", "dist"]
}
