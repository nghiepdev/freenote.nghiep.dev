{
  "name": "freetext",
  "private": true,
  "version": "1.0.0",
  "homepage": "https://freetext.dete.dev",
  "description": "Free text note service",
  "scripts": {
    "dev": "NODE_ENV=development ts-node-dev --respawn --transpile-only app",
    "build": "NODE_ENV=production tsc --noEmit false"
  },
  "dependencies": {
    "deta": "^1.1.0",
    "fastify": "^4.6.0"
  },
  "devDependencies": {
    "@types/node": "^18.7.23",
    "prettier": "^2.7.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.4"
  },
  "engines": {
    "node": "^14"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": false,
    "arrowParens": "avoid",
    "endOfLine": "auto"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nghiepit/freetext.git"
  },
  "author": "me@nghiep.dev",
  "license": "MIT"
}
