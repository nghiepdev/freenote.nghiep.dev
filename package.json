{
  "name": "freetext",
  "private": true,
  "version": "1.0.0",
  "homepage": "https://freetext.dete.dev",
  "description": "The simplest way to keep notes. Light, clean, and free.",
  "scripts": {
    "dev": "NODE_ENV=development ts-node-dev --respawn --transpile-only src",
    "build": "yarn -s clean && tsc --noEmit false && cp -r src/templates templates",
    "clean": "git clean -xf *.js templates"
  },
  "dependencies": {
    "deta": "^1.1.0",
    "dotenv": "^16.0.3",
    "fastify": "^4.8.1",
    "is-plain-object": "^5.0.0",
    "mime-types": "^2.1.35",
    "nanoid": "^3.0.0"
  },
  "devDependencies": {
    "@types/mime-types": "^2.1.1",
    "@types/node": "^18.8.5",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.4"
  },
  "engines": {
    "node": "^14"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nghiepit/freetext.deta.dev.git"
  },
  "author": "me@nghiep.dev",
  "license": "MIT"
}
