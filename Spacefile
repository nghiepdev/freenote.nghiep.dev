v: 0
app_name: 'Text Note'
icon: ./icon.png
micros:
  - name: app
    src: .
    engine: nodejs16
    public: true
    presets:
      env:
        - name: APP_NAME
          default: FreeText
        - name: APP_DETA_PROJECT_KEY
          description: The key is used to access the collection in Deta, and it is also used for migration. Skip if it's a new project.
        - name: APP_ABOUT_URL
          default: https://deta.space/discovery/@nghiepit/freetext
    commands:
      - yarn build:src
      - yarn build:style
    include:
      - node_modules
      - dist
      - assets
      - templates
    run: 'NODE_ENV=production node dist/index.js'
    dev: npx tsx watch --clear-screen=false -r dotenv/config src
